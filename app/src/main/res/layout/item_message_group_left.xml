<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toLeftOf="@+id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        tools:text="王大力" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBaseline_toBaselineOf="@+id/name"
        tools:text="10:16" />


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#fcfc"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        tools:text="周末继续早起散步。心血来潮，独自去小区对面的星级酒店后花园爬山，微风佛面、朝晖渐显。沿着栈道缓步前移，可见林郁葱葱、绿苔青青、知了叫嚣，隔壁新起的楼盘冲斥钢筋混凝土的喧闹，也影响不了一颗亲近自然的心，怡然自得的闲庭信步，耳机传出欢快的排箫曲" />
</android.support.constraint.ConstraintLayout>
